<div class="container">
  <div class="d-flex justify-content-between">
    <!-- search bar -->
    <div class="search-bar">
      <div class="search-bar-outer">
        <div class="search-bar-inner">
          <form action="/search">
            <h4 class="mb-2">尋找餐廳：</h4>
            <div class="input-group">
              <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類"
                aria-label="Restaurant Name..." value="{{keyword}}" aria-describedby="search-button">
              <div class="input-group-append">
                <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
    <!-- sort -->
    <div class="dropdown">
      <button class="btn btn-secondary dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
        aria-expanded="false">排序</button>
      <ul class=" dropdown-menu">
        <li><a class="dropdown-item " href="/search?sort=name">名稱</a></li>
        <li><a class="dropdown-item " href="/search?sort=category">類別</a></li>
      </ul>
    </div>
  </div>
</div>


<!-- restaurant list -->
<div class="container mt-5">
  <a href="./restaurants/new" class="btn btn-outline-info btn-sm m-1 m-2">Create</a>
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row row-cols-sm-3">
        {{#each restaurants}}
        <div class="mb-3 ">

          <div class="card ">
            <img class="card-img-top" src="{{this.image}}" alt={{this.name}}>

            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge rounded-pill bg-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>
            </div>
          </div>
          <div class="d-inline-flex justify-content-center">
            <a class="btn btn-outline-secondary btn-sm m-1" href="/restaurants/{{this._id}}/edit" role="button">Edit</a>
            <a href="./restaurants/{{this._id}}" class="btn btn-outline-info btn-sm m-1">Detail</a>
            <form action="./restaurants/{{this._id}}?_method=DELETE" method="POST" class="form-inline">
              <button type="submit" class="btn btn-secondary btn-sm m-1">Delete</button>
            </form>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>